<?xml version="1.0"?>

<!--Name of robot-->
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="Roberto_MkII">

  <!--Naming Materials-->
  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>
  
  <material name="green">
    <color rgba="0 1 0 1"/>
  </material>

  <!--Xacro Macros-->
  <!--Body Macros-->
  <xacro:property name="body_size" value="1.5 0.8 .3" />

  <!--Wheel Macros-->
  <xacro:property name="wheel_len" value=".15" />
  <xacro:property name="wheel_rad" value=".3" />
  <xacro:property name="wheel_origin" value="1.57075 0 0" />
  <xacro:macro name="wheel" params="suffix reflect_x reflect_y reflect_z">
    <link name="link_${suffix}">
      <visual>
        <geometry>
          <cylinder length="${wheel_len}" radius="${wheel_rad}"/>
        </geometry>
        <origin rpy="${wheel_origin}"/>
        <material name="blue"/>
      </visual>
      <collision>
        <geometry>
          <cylinder length="${wheel_len}" radius="${wheel_rad}"/>
        </geometry>
        <origin rpy="${wheel_origin}"/>
      </collision>
      <inertial>
        <mass value="12.01"/>
        <inertia ixx=".14" ixy="0" ixz="0" iyy="0.24" iyz="0" izz=".14"/>
      </inertial>
    </link>

    <joint name="joint_${suffix}" type="continuous">
      <parent link="base_link"/>
      <child link="link_${suffix}"/>
      <axis xyz="0 1 0"/>
      <origin xyz="${reflect_x * 0.6} ${reflect_y * 0.475} ${reflect_z * 0.075}"/>
    </joint>
    
    <!--Connects Gazebo to ROS Controls-->
    <transmission name="joint_${suffix}_wheel_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <actuator name="joint_${suffix}_wheel_motor">
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
      <joint name="joint_${suffix}">
        <hardwareInterface>hardware_interface/VelocityJointInterface
        </hardwareInterface>
      </joint>
    </transmission>
    
    <!--Some extra Gazebo details-->
    <gazebo reference="link_${suffix}">
      <mu1 value="200.0"/>
      <mu2 value="100.0"/>
      <kp value="10000000.0"/>
      <kd value="1.0"/>
      <material>Gazebo/Blue</material>
    </gazebo>
  </xacro:macro>

  <!--Links-->
  <!--Body(base_link)-->
  <link name="base_link">
    <!--Visual-->
    <visual>
      <geometry>
        <mesh filename="package://lunarbot/meshes/base_link2.stl"/>
      </geometry>
      <material name="white"/>
    </visual>
    <!--Collision-->
    <collision>
      <geometry>
        <box size="${body_size}"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="108.09"/>
      <!--inertia: required by Gazebo-->  
      <!--6 values: ixx ixy ixz iyy iyz izz-->
      <inertia ixx="4.05" ixy="0" ixz="0" iyy="9.82" iyz="0" izz="12.25"/>
    </inertial>
    <gazebo>
      <material>Gazebo/Grey</material>
    </gazebo>
  </link>

  <!--wheel/joint_0-->
  <xacro:wheel suffix="0" reflect_x="1" reflect_y="1" reflect_z="-1" />
  <!--wheel/joint_1-->
  <xacro:wheel suffix="1" reflect_x="1" reflect_y="-1" reflect_z="-1" />
  <!--wheel/joint_2-->
  <xacro:wheel suffix="2" reflect_x="-1" reflect_y="1" reflect_z="-1" />
  <!--wheel/joint_3-->
  <xacro:wheel suffix="3" reflect_x="-1" reflect_y="-1" reflect_z="-1" />

  <link name="auger">
    <visual>
      <origin xyz="0 0 -1.2"/>
      <geometry>
         <mesh filename="package://lunarbot/meshes/auger.stl"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="1.05" radius=".18"/>
      </geometry>
      <origin xyz="0 0 -.565"/>
    </collision>
    <inertial>
      <mass value="33"/>
      <inertia ixx="4.73" ixy="0" ixz="0" iyy="4.73" iyz="0" izz=".165"/>
    </inertial>
  </link>
  
  <joint name="auger_joint" type="continuous">
    <parent link="link_5"/>
    <child link="auger"/>
    <axis xyz="0 0 1"/>
    <origin xyz=".23 0 0"/>
  </joint>
  
  <transmission name="auger_joint_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <actuator name="auger_joint_motor">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
    <joint name="auger_joint">
      <hardwareInterface>hardware_interface/VelocityJointInterface
      </hardwareInterface>
    </joint>
  </transmission>

  <link name="link_4">
    <visual>
      <geometry>
        <box size=".05 .1 .8"/>
      </geometry>
      <origin xyz="0 0 .3"/>
      <material name="green"/>
    </visual>
    <gazebo>
      <material>Gazebo/Yellow</material>
    </gazebo>
  </link>
  
  <joint name="joint_4" type="fixed">
    <parent link="base_link"/>
    <child link="link_4"/>
    <origin rpy="0 -.85 0" xyz="-.25 0 -.05"/>
  </joint>

  <link name="link_5">
    <visual>
      <geometry>
        <box size=".1 .1 .3"/>
      </geometry>
      <origin rpy="0 1.575 0" xyz=".15 0 0"/>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="joint_5" type="prismatic">
    <parent link="link_4"/>
    <child link="link_5"/>
    <axis xyz="0 0 1"/>
    <limit effort="1000" lower="-.55" upper="0" velocity=".5"/>
    <origin xyz="0 0 .65"/>
  </joint>

  <transmission name="joint_5_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <actuator name="joint_5_motor">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
    <joint name="joint_5">
      <hardwareInterface>hardware_interface/EffortJointInterface
      </hardwareInterface>
    </joint>
  </transmission>

	<!--Gazebo plugin for ROS controls-->
	<gazebo>
	  <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so"/>
	</gazebo>

</robot>
